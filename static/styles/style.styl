/*
---------------------
    Variables
---------------------
*/
sans_font = Roboto
serif_font = 'Lora'
gray = #F9F7F7
orange = #F7921D

/*
---------------------
    Common styles
---------------------
*/

html, body
    font-family: serif_font
    font-size: 18px
    line-height: 180%
    color: black
    background: gray

::selection
    text-shadow: none
    background: orange
    color: white

.page-wrap
    background: white
    margin: 60px
    padding: 45px

h1, h2, h3, h4, h5
    font-family: serif_font
    color: black
    font-weight: 300
    font-size: 40px
    line-height: 180%

h2
    font-size: 36px

h3
    font-size: 30px

h4
    font-size: 24px

h5
    font-size: 18px

a
    color: orange
    text-decoration: none

    &:hover
        color: orange
        text-decoration: underline

.centered
    text-align: center
